doctype html
link(rel='stylesheet' href='css/style.css')

head
    title My First Full Stack Project
body
    div#firstcell
        h1 Simple TODO APP
        p Please enter a TODO list item! 
        form(action="/", method="post")
            label#todoLabel(for="todo") TODO Item: 
            input(type="text", name="todo")
            br
            input#add(type="submit" value="Add")
    //- br
    
    div#secondcell
        h1 My TODO List
        ul 
        - for (let i = 0; i < tasks.length; i++)
            li= tasks[i].id + " " + tasks[i].task
                form(action="/delete", method="post")
                    input(type="hidden", name="id" value=tasks[i].id)
                    input#delete(type="submit", value="Delete") 